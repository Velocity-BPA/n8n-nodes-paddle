	"description": "A comprehensive n8n community node for Paddle payment platform providing 12 resources and 70+ operations for subscription management, transaction processing, and customer lifecycle automation.",
	"license": "BUSL-1.1",
	"author": {
		"name": "Velocity BPA",
		"email": "licensing@velobpa.com",
		"url": "https://velobpa.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Velocity-BPA/n8n-nodes-paddle.git"
	},
	"homepage": "https://github.com/Velocity-BPA/n8n-nodes-paddle",
	"bugs": {
		"url": "https://github.com/Velocity-BPA/n8n-nodes-paddle/issues"
	},
	"keywords": [
		"n8n",
		"n8n-community-node-package",
		"paddle",
		"payments",
		"subscriptions",
		"billing",
		"saas",
		"merchant-of-record",
		"tax-compliance",
		"invoicing",
		"checkout"
	],
	"main": "dist/nodes/Paddle/Paddle.node.js",
